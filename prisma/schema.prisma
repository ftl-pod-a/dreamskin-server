generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            		Int      @id @default(autoincrement())
  name          		String
  category   		    String
  imageUrl   		    String
  description   		String
  brand   		      String
  price        		  Float
  ingredients       String[]
  likes         		Int      @default(0)

  likedBy       User[]   @relation("UserLikesProduct")
  comments      Comment[] @relation("ProductComments")
}

model User {
  user_id           	Int      @id @default(autoincrement())
  google_id    		    Int      @unique
  username    		    String
  skinType     		    String   // Mandatory field to store the user's skin type
  goals 			        String
  concerns		        String

  likedProducts   Product[] @relation("UserLikesProduct")
  comments        Comment[] @relation("UserComments")
}

model Comment {
  id                  Int      @id @default(autoincrement())
  text                String
  createdAt           DateTime @default(now())
  user                User     @relation("UserComments", fields: [user_id], references: [user_id])
  user_id             Int
  product             Product  @relation("ProductComments", fields: [product_id], references: [id])
  product_id           Int
}
