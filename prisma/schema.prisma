generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Product {
  id            		Int      @id @default(autoincrement())
  name          		String
  category   		    String
  imageUrl   		    String
  description   		String
  brand   		      String
  price        		  Float
  ingredients       String[]
  likes         		Int      @default(0)

  likedBy       User[]   @relation("UserLikesProduct")
  comments      Comment[] @relation("ProductComments")
}

model User {
  user_id           	Int         @id @default(autoincrement())
  username    		    String      @unique
  password    		    String
  skinType     		    String?
  goals 			        String? 
  concerns		        String?
  
  
  likedProducts   Product[] @relation("UserLikesProduct")
  comments        Comment[] @relation("UserComments")
}

model Comment {
  id                  Int      @id @default(autoincrement())
  text                String
  user                User     @relation("UserComments", fields: [user_id], references: [user_id])
  user_id             Int
  product             Product  @relation("ProductComments", fields: [product_id], references: [id])
  product_id          Int
}

model Chat {
  chat_id             Int      @id @default(autoincrement())
  conversationId      String
  prompt              String
  response            String
  createdAt           DateTime @default(now())
}

//article model

model Article {
  articleId            Int      @id @default(autoincrement())
  articleCategory      String
  articleTitle         String
  articleUrl           String
}

